        // “ö“±—Ä—ã–ª“ì—ã–Ω—ã —Ç–∞“£–¥–∞—É —Ñ—É–Ω–∫—Ü–∏—è—Å—ã
        function selectDevice(deviceId) {
            currentDevice = deviceId;
            
            // –ö–∞—Ä—Ç–æ—á–∫–∞–ª–∞—Ä–¥—ã –∂–∞“£–∞—Ä—Ç—É
            document.querySelectorAll('.device-card').forEach(card => {
                card.classList.remove('active');
            });
            event.currentTarget.classList.add('active');
            
            // –ê“õ–ø–∞—Ä–∞—Ç –ø–∞–Ω–µ–ª—ñ–Ω –∂–∞“£–∞—Ä—Ç—É
            const device = devices[deviceId];
            document.getElementById('device-title').textContent = device.title;
            document.getElementById('device-description').textContent = device.description;
            
            // Hotspot –∂–∞“£–∞—Ä—Ç—É
            const hotspotsContainer = document.querySelector('.hotspots');
            hotspotsContainer.innerHTML = '';
            device.hotspots.forEach(hotspot => {
                hotspotsContainer.innerHTML += `<div class="hotspot" onclick="showPartInfo('${hotspot.toLowerCase()}')">${hotspot}</div>`;
            });
            
            // 3D –º–æ–¥–µ–ª–¥—ñ –∂–∞“£–∞—Ä—Ç—É
            update3DModel(deviceId);
        }

        // 3D –º–æ–¥–µ–ª–¥—ñ –∂–∞“£–∞—Ä—Ç—É
        function update3DModel(deviceId) {
            // –ë–∞—Ä–ª—ã“õ –º–æ–¥–µ–ª–¥–µ—Ä–¥—ñ –∂–∞—Å—ã—Ä—É
            document.querySelectorAll('.device-model').forEach(model => {
                model.setAttribute('visible', 'false');
            });
            
            // –¢–∞“£–¥–∞–ª“ì–∞–Ω –º–æ–¥–µ–ª–¥—ñ –∫”©—Ä—Å–µ—Ç—É
            const model = document.getElementById(`${deviceId}-model`);
            if (model) {
                model.setAttribute('visible', 'true');
                
                // –ë–∞—Å—Ç–∞–ø“õ—ã –º–∞—Å—à—Ç–∞–±
                if (deviceId === 'mouse') {
                    model.setAttribute('scale', '0.5 0.5 0.5');
                } else if (deviceId === 'keyboard') {
                    model.setAttribute('scale', '0.4 0.4 0.4');
                } else if (deviceId === 'monitor') {
                    model.setAttribute('scale', '0.6 0.6 0.6');
                }
                
                // –ë–∞—Å—Ç–∞–ø“õ—ã –ø–æ–∑–∏—Ü–∏—è“ì–∞ “õ–∞–π—Ç–∞—Ä—É
                model.setAttribute('position', '0 0 0');
                model.setAttribute('rotation', '0 0 0');
                
                // –ê–Ω–∏–º–∞—Ü–∏—è–Ω—ã “õ–æ—Å—É
                model.setAttribute('animation', 'property: rotation; to: 0 360 0; loop: true; dur: 20000; easing: linear');
            }
        }

        // –†–µ–∂–∏–º–¥—ñ –æ—Ä–Ω–∞—Ç—É
        function setMode(mode) {
            currentMode = mode;
            
            // –ë–∞—Ç—ã—Ä–º–∞–ª–∞—Ä –∂–∞“£–∞—Ä—Ç—É
            document.querySelectorAll('.mode-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.currentTarget.classList.add('active');
            
            // –°—Ü–µ–Ω–∞“ì–∞ ”ô—Å–µ—Ä –µ—Ç—É
            const scene = document.querySelector('a-scene');
            if (mode === 'vr') {
                document.getElementById('ar-button').style.display = 'block';
                if (scene.hasAttribute('vr-mode-ui')) {
                    scene.setAttribute('vr-mode-ui', 'enabled: true');
                }
            } else {
                document.getElementById('ar-button').style.display = 'none';
            }
            
            if (mode === 'light') {
                document.querySelector('a-light[type="ambient"]').setAttribute('intensity', '0.8');
            } else {
                document.querySelector('a-light[type="ambient"]').setAttribute('intensity', '0.4');
            }
        }

        // VR —Ä–µ–∂–∏–º—ñ–Ω —ñ—Å–∫–µ “õ–æ—Å—É
        function enterVR() {
            const scene = document.querySelector('a-scene');
            if (scene.enterVR) {
                scene.enterVR();
            }
        }

        // –ú–æ–¥–µ–ª–¥—ñ –∞–π–Ω–∞–ª–¥—ã—Ä—É
        function rotateModel() {
            const model = document.getElementById(`${currentDevice}-model`);
            if (model) {
                const currentRotation = model.getAttribute('rotation');
                const newRotation = {
                    x: currentRotation.x,
                    y: currentRotation.y + 90,
                    z: currentRotation.z
                };
                model.setAttribute('animation', `property: rotation; to: ${newRotation.x} ${newRotation.y} ${newRotation.z}; dur: 500; easing: easeInOutQuad`);
            }
        }

        // –ú–∞—Å—à—Ç–∞–±—Ç–∞—É —Ñ—É–Ω–∫—Ü–∏—è–ª–∞—Ä—ã
        function zoomIn() {
            const model = document.getElementById(`${currentDevice}-model`);
            if (model) {
                const currentScale = model.getAttribute('scale');
                const newScale = {
                    x: currentScale.x * 1.2,
                    y: currentScale.y * 1.2,
                    z: currentScale.z * 1.2
                };
                model.setAttribute('animation', `property: scale; to: ${newScale.x} ${newScale.y} ${newScale.z}; dur: 300`);
            }
        }

        function zoomOut() {
            const model = document.getElementById(`${currentDevice}-model`);
            if (model) {
                const currentScale = model.getAttribute('scale');
                const newScale = {
                    x: currentScale.x * 0.8,
                    y: currentScale.y * 0.8,
                    z: currentScale.z * 0.8
                };
                model.setAttribute('animation', `property: scale; to: ${newScale.x} ${newScale.y} ${newScale.z}; dur: 300`);
            }
        }

        // –ë”©–ª—à–µ–∫—Ç–µ—É –∫”©—Ä—ñ–Ω—ñ—Å—ñ
        function explodeView() {
            const model = document.getElementById(`${currentDevice}-model`);
            if (!model) return;
            
            isExploded = !isExploded;
            
            if (isExploded) {
                // –ë”©–ª—à–µ–∫—Ç–µ—É –∞–Ω–∏–º–∞—Ü–∏—è—Å—ã
                const parts = model.children;
                for (let i = 0; i < parts.length; i++) {
                    const part = parts[i];
                    const offset = (i + 1) * 0.2;
                    const targetPos = {
                        x: part.object3D.position.x + (Math.random() - 0.5) * offset,
                        y: part.object3D.position.y + (Math.random() - 0.5) * offset,
                        z: part.object3D.position.z + (Math.random() - 0.5) * offset
                    };
                    part.setAttribute('animation', `property: position; to: ${targetPos.x} ${targetPos.y} ${targetPos.z}; dur: 800`);
                }
            } else {
                // –ë—ñ—Ä—ñ–∫—Ç—ñ—Ä—É –∞–Ω–∏–º–∞—Ü–∏—è—Å—ã
                const parts = model.children;
                for (let i = 0; i < parts.length; i++) {
                    const part = parts[i];
                    const originalPos = getOriginalPosition(currentDevice, i);
                    part.setAttribute('animation', `property: position; to: ${originalPos.x} ${originalPos.y} ${originalPos.z}; dur: 800`);
                }
            }
        }

        function getOriginalPosition(deviceId, partIndex) {
            // ”ò—Ä “õ“±—Ä—ã–ª“ì—ã “Ø—à—ñ–Ω –±–∞—Å—Ç–∞–ø“õ—ã –ø–æ–∑–∏—Ü–∏—è–ª–∞—Ä
            const positions = {
                mouse: [
                    {x: -0.5, y: 0, z: 0},
                    {x: 0.2, y: 0.1, z: 0.15},
                    {x: 0.2, y: 0.1, z: -0.15},
                    {x: -0.7, y: 0.1, z: 0}
                ],
                keyboard: [
                    {x: 0, y: 0, z: 0},
                    {x: -0.7, y: 0.05, z: 0.2},
                    {x: -0.5, y: 0.05, z: 0.2},
                    {x: 0, y: 0.05, z: 0}
                ]
            };
            
            return positions[deviceId]?.[partIndex] || {x: 0, y: 0, z: 0};
        }

        // –ë”©–ª—ñ–∫ –∞“õ–ø–∞—Ä–∞—Ç—ã–Ω –∫”©—Ä—Å–µ—Ç—É
        function showPartInfo(partName) {
            const partInfo = {
                'left-button': '–°–æ–ª –±–∞—Ç—ã—Ä–º–∞: –ù–µ–≥—ñ–∑–≥—ñ —Ç–∞“£–¥–∞—É –±–∞—Ç—ã—Ä–º–∞—Å—ã',
                'right-button': '–û“£ –±–∞—Ç—ã—Ä–º–∞: –ö–æ–Ω—Ç–µ–∫—Å—Ç—ñ–∫ –º”ô–∑—ñ—Ä–¥—ñ –∞—à–∞–¥—ã',
                'scroll-wheel': '–°–∫—Ä–æ–ª–ª –¥–æ“£“ì–∞–ª–∞“ì—ã: –ë–µ—Ç—Ç—ñ —Ç”©–º–µ–Ω-–∂–æ“ì–∞—Ä—ã –∂—ã–ª–∂—ã—Ç—É',
                'laser': '–õ–∞–∑–µ—Ä –Ω“Ø–∫—Ç–µ—Å—ñ: –ö—É—Ä—Å–æ—Ä–¥—ã“£ —ç–∫—Ä–∞–Ω–¥–∞“ì—ã –æ—Ä–Ω—ã–Ω –∞–Ω—ã“õ—Ç–∞–π–¥—ã'
            };
            
            alert(partInfo[partName] || `–ë”©–ª—ñ–∫ –∞“õ–ø–∞—Ä–∞—Ç—ã: ${partName}`);
        }

        // –î–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü–∏—è–Ω—ã –æ–π–Ω–∞—Ç—É
        function playDemo() {
            const model = document.getElementById(`${currentDevice}-model`);
            if (!model) return;
            
            // “ö“±—Ä—ã–ª“ì—ã“ì–∞ –±–∞–π–ª–∞–Ω—ã—Å—Ç—ã –¥–µ–º–æ –∞–Ω–∏–º–∞—Ü–∏—è
            if (currentDevice === 'mouse') {
                // –¢—ñ–Ω—Ç—É—ñ—Ä –¥–µ–º–æ
                const cursor = document.createElement('a-entity');
                cursor.setAttribute('geometry', 'primitive: sphere; radius: 0.02');
                cursor.setAttribute('material', 'color: #FF0000');
                cursor.setAttribute('position', '0 1.5 -2');
                cursor.setAttribute('animation', 'property: position; dir: alternate; dur: 2000; loop: true; to: 1 1.5 -2');
                document.querySelector('a-scene').appendChild(cursor);
                
                setTimeout(() => {
                    document.querySelector('a-scene').removeChild(cursor);
                }, 2000);
                
            } else if (currentDevice === 'keyboard') {
                // –ü–µ—Ä–Ω–µ—Ç–∞“õ—Ç–∞ –¥–µ–º–æ
                const keys = model.querySelectorAll('.key');
                keys.forEach((key, index) => {
                    setTimeout(() => {
                        key.setAttribute('animation__click', 'property: position; to: ' + 
                            key.getAttribute('position').x + ' 0.03 ' + 
                            key.getAttribute('position').z + '; dur: 100; startEvents: click');
                        key.emit('click');
                        
                        setTimeout(() => {
                            key.setAttribute('animation__click', 'property: position; to: ' + 
                                key.getAttribute('position').x + ' 0.05 ' + 
                                key.getAttribute('position').z + '; dur: 100');
                        }, 100);
                    }, index * 200);
                });
            }
            
            alert('–î–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü–∏—è –æ–π–Ω–∞—Ç—ã–ª—É–¥–∞...');
        }

        // –¢–µ—Å—Ç –∂–∞—É–∞–ø—Ç–∞—Ä—ã–Ω —Ç–∞“£–¥–∞—É
        function selectAnswer(element, answerIndex) {
            const question = element.closest('.question');
            question.querySelectorAll('.option').forEach(opt => {
                opt.classList.remove('selected');
            });
            element.classList.add('selected');
            
            const questionIndex = Array.from(document.querySelectorAll('.question')).indexOf(question);
            testAnswers[questionIndex] = answerIndex;
        }

        // –¢–µ—Å—Ç—Ç—ñ –∞—è“õ—Ç–∞—É
        function submitTest() {
            const totalQuestions = document.querySelectorAll('.question').length;
            const correctAnswers = [1]; // –î“±—Ä—ã—Å –∂–∞—É–∞–ø—Ç–∞—Ä
            let score = 0;
            
            for (let i = 0; i < totalQuestions; i++) {
                if (testAnswers[i] === correctAnswers[i]) {
                    score++;
                }
            }
            
            alert(`–¢–µ—Å—Ç –∞—è“õ—Ç–∞–ª–¥—ã! –°—ñ–∑ ${score}/${totalQuestions} –¥“±—Ä—ã—Å –∂–∞—É–∞–ø –±–µ—Ä–¥—ñ“£—ñ–∑.`);
            document.getElementById('test-section').style.display = 'none';
        }

        // –ë–∞—Å—Ç–∞–ø“õ—ã –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        window.onload = function() {
            update3DModel('mouse');
            
            // VR —Ä–µ–∂–∏–º—ñ–Ω—ñ“£ “õ–æ–ª–∂–µ—Ç—ñ–º–¥—ñ–ª—ñ–≥—ñ–Ω —Ç–µ–∫—Å–µ—Ä—É
            if (navigator.xr) {
                navigator.xr.isSessionSupported('immersive-vr').then(supported => {
                    if (supported) {
                        console.log('VR —Ä–µ–∂–∏–º—ñ “õ–æ–ª–¥–∞—É –∫”©—Ä—Å–µ—Ç—ñ–ª–≥–µ–Ω');
                    }
                });
            }
        };

        // AFrame –∫–æ–º–ø–æ–Ω–µ–Ω—Ç—Ç–µ—Ä—ñ
        AFRAME.registerComponent('highlight-button', {
            init: function() {
                this.el.addEventListener('mouseenter', () => {
                    this.el.setAttribute('material', 'color', '#FF0000');
                });
                this.el.addEventListener('mouseleave', () => {
                    this.el.setAttribute('material', 'color', '#333333');
                });
            }
        });
    </script>
